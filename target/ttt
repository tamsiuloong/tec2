SELECT
				td1.depart_name ,
				ifnull(t.nums,0),d1.depart_id
				FROM
				jc_department d1
				LEFT JOIN(
				SELECT
				d.depart_id ,
				count(c.user_id) nums
				FROM
				jc_content c
				JOIN jc_user u ON c.user_id = u.user_id
				JOIN jc_department d ON u.depart_id = d.depart_id
				GROUP BY
				d.depart_id
				) t ON d1.depart_id = t.depart_id
				ORDER BY
				nums DESC\n